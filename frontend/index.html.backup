        <!-- Header -->
        <div class="p-5 border-b border-slate-200 bg-slate-50">
            <div class="flex items-center gap-2 mb-1">
                <i data-lucide="map" class="text-indigo-600 w-6 h-6"></i>
                <h1 class="text-xl font-bold text-indigo-900">SIG Foncier Boundou</h1>
            </div>
            <p class="text-xs text-slate-500">Plateforme de gestion des parcelles et enquêtes</p>
        </div>

        <!-- Filters & Search -->
        <div class="p-4 border-b border-slate-200 bg-white space-y-3">
            <div class="relative">
                <i data-lucide="search" class="absolute left-3 top-1/2 -translate-y-1/2 text-slate-400 w-4 h-4"></i>
